<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="indi.xk.report.mapper.CommentMapper">
    <insert id="add">
        insert into comment
        (
            user_id,
            blog_id,
            content
        )
        values
        (
            #{userId},
            #{blogId},
            #{content}
        )
    </insert>
</mapper>