<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="indi.xk.blog.mapper.BlogMapper">
    <insert id="addBlog">
        insert into blog
        (
            user_id,
            content
        )
        values
        (
            #{userId},
            #{content}
        )
    </insert>

    <update id="updateBlog">
        update blog
        set content = #{content}
        where id = #{id}
    </update>

    <delete id="deleteBlog">
        delete from blog
        where id = #{id}
    </delete>

    <select id="detailBlog" resultType="indi.xk.blog.bean.Blog">
        select
        id,
        content,
        user_id
        from blog
        where id = #{id}
    </select>
</mapper>